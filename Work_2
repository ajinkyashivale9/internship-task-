// Task 2 --> Simple Calculator using Switch Case

#include<iostream> 
using namespace std;

int main()
{
    int a,b;
    char oper; 

    cout << "Enter Number which to be operated : ";
    cin >> a >> b;
    cout << "Enter Operator (-,+,*,/) : ";
    cin >> oper;

    switch(oper) 
    {
        case '-' : cout << "Substraction of two numbers " << a+b <<endl;
        break;

        case '+' : cout << "addition of two numbers " << a-b <<endl;
        break;

        case '*' : cout << "Multiplication of two numbers " << a*b <<endl;
        break;

        case '/' : cout << "Division of two numbers " << a/b <<endl;
        break;

        default : cout << "Invalid operation !";
        break;
    }
}
